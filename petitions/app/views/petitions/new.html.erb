<h2>Новая Петиция</h2>

<%= form_for :petition, url: petitions_path do |f| %>
    <% if @petition.errors.any? %>
        <div class="error_messages">
          <h3>Form is invalid</h3>
          <ul>
            <% @petition.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <form class="form">
      <div class="form-group">
        <label class="control-label">Название</label>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label class="control-label">Описание</label>
        <%= f.text_area :text, class: 'form-control', rows: 5 %>

      </div>
      <button type="submit" class="btn btn-success"><% f.submit %>Создать</button>
    </form>
<% end %>


